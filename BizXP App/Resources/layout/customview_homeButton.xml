
<android.support.constraint.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@drawable/bg_onlybottomshadow">
                <ImageView
                    android:id="@+id/buttonIcon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/inventory_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/buttonTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inventory"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@id/buttonIcon"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/buttonDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage your products &amp; stocks"
                    android:singleLine="false"
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-light"
                    app:layout_constraintLeft_toLeftOf="@id/buttonTitle"
                    app:layout_constraintTop_toBottomOf="@id/buttonTitle"/>
            </android.support.constraint.ConstraintLayout>