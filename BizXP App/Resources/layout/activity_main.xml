
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <LinearLayout
            android:id="@+id/appHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:background="@drawable/bg_onlybottomshadow"
            android:paddingLeft="10dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/userImgave"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome \nAousaf Rashid"
                android:textSize="20dp"
                android:layout_marginLeft="12dp"/>
        </LinearLayout>
        <com.google.android.flexbox.FlexboxLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            app:flexWrap="wrap"
            app:alignItems="stretch"
            app:alignContent="stretch"
            app:layout_constraintTop_toBottomOf="@id/appHeader">
            <Button
                android:id="@+id/inventoryBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_user_headerbar_textview"
                android:fontFamily="sans-serif"
                app:layout_flexBasisPercent="43%"
                android:text="Inventory"
                android:textAllCaps="false"
                android:textColor="#0078ff"
                android:textSize="18dp"
                android:drawableTop="@drawable/icon_inventory"
                android:padding="20dp"
                android:drawablePadding="15dp"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/paymentsBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_user_headerbar_textview"
                android:fontFamily="sans-serif"
                app:layout_flexBasisPercent="43%"
                android:text="Payments"
                android:textAllCaps="false"
                android:textColor="#0078ff"
                android:textSize="18dp"
                android:drawableTop="@drawable/icon_payment"
                android:padding="20dp"
                android:drawablePadding="15dp" 
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/ordersBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_user_headerbar_textview"
                android:fontFamily="sans-serif"
                app:layout_flexBasisPercent="43%"
                android:text="Orders"
                android:textAllCaps="false"
                android:textColor="#0078ff"
                android:textSize="18dp"
                android:drawableTop="@drawable/icon_order"
                android:padding="20dp"
                android:drawablePadding="15dp" 
                android:layout_margin="10dp"/>
        <Button
                android:id="@+id/reportsBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_user_headerbar_textview"
                android:fontFamily="sans-serif"
                app:layout_flexBasisPercent="43%"
                android:text="Reports"
                android:textAllCaps="false"
                android:textColor="#0078ff"
                android:textSize="18dp"
                android:drawableTop="@drawable/icon_report"
                android:padding="20dp"
                android:drawablePadding="15dp" 
                android:layout_margin="10dp"/>
        </com.google.android.flexbox.FlexboxLayout>
    </android.support.constraint.ConstraintLayout>