<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/totalContainer"
        android:background="@drawable/bg_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:orientation="horizontal"
        android:paddingTop="30dp">
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_user_headerbar_textview_blue_dark_rounded"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#fff"
            android:text="Welcome Md.Alauddin"
            android:textSize="18dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/welcomeText"
            app:layout_constraintBottom_toBottomOf="@id/welcomeText"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/selector_bg_user_headerbar_textview_blue"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="30dp"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:text="Log Out"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/todaySale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/bg_user_headerbar_textview"
            app:layout_constraintTop_toBottomOf="@id/welcomeText"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <ImageView
                android:id="@+id/cartIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/cart_blue"/>
            <TextView
                android:id="@+id/saleCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/cartIcon"
                app:layout_constraintBottom_toTopOf="@+id/saleText"
                android:layout_marginLeft="10dp"
                android:text="500"
                android:textSize="23dp"
                android:textStyle="bold"
                android:textColor="#048ce2"/>
            <TextView
                android:id="@+id/saleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/saleCount"
                app:layout_constraintLeft_toLeftOf="@id/saleCount"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="orders today"
                android:textSize="18dp"
                android:textColor="#048ce2"/>
            <View
                android:id="@+id/seperator"
                android:layout_width="2dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="#e4e4e4"/>
            <ImageView
                android:id="@+id/currencyIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintLeft_toRightOf="@id/seperator"
                android:src="@drawable/taka_green"/>
            <TextView
                android:id="@+id/moneyCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/currencyIcon"
                android:layout_marginLeft="10dp"
                android:text="50,000৳"
                android:textSize="23dp"
                android:textStyle="bold"
                android:textColor="#01db3e"/>
            <TextView
                android:id="@+id/currencyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/moneyCount"
                app:layout_constraintLeft_toLeftOf="@id/moneyCount"
                android:text="revenue today"
                android:textSize="18dp"
                android:textColor="#01db3e"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/todayRevenue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/todaySale"
            android:background="@drawable/bg_shadow_box"
            app:layout_constraintTop_toBottomOf="@id/welcomeText"
            android:paddingTop="30dp"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:layout_marginRight="15dp">

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        app:layout_constraintTop_toBottomOf="@id/totalContainer"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/homeButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_shadow_vertical"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="10dp"
            android:paddingBottom="40dp"/>
    </ScrollView>
</LinearLayout>
