
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7ff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#171560">
            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/home_top_guy"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/greetingText"/>
            <ImageView
                android:id="@+id/menuBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/menu_icon_white"/>
            <ImageView
                android:id="@+id/bottomImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/home_top"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="@id/bottomImg"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="15dp"
                android:src="@drawable/happy_user"/>
            <TextView
                android:id="@+id/greetingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="শুভ সকাল"
                android:textColor="#fff"
                android:textSize="23dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintBottom_toTopOf="@id/bottomImg"
                app:layout_constraintLeft_toLeftOf="parent" />
            <TextView
                android:id="@+id/userFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aousaf"
                android:textColor="#fff"
                android:textSize="28dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/bottomImg"
                app:layout_constraintLeft_toLeftOf="@id/greetingText" />
        </android.support.constraint.ConstraintLayout>


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/verify_card"
                android:layout_weight="0.7"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardElevation="2sp"
                card_view:cardUseCompatPadding="true"
                app:cardCornerRadius="20dp">
                <TextView
                    android:id="@+id/saleAndRevenue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Sales: 500  Revenue: 50,000৳"
                    android:paddingLeft="20dp"
                    android:textSize="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="15dp"
                    android:textColorHint="#3896ff"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/dateSelector"
                android:layout_weight="0.33"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardElevation="2sp"
                card_view:cardUseCompatPadding="true"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/dateText"
                        android:layout_width="0dp"
                        android:layout_weight="0.9"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Today"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textColorHint="#3896ff"
                        android:layout_marginLeft="5dp"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_height="7dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/downArrow_icon"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>