
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:id="@+id/appHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:background="@drawable/bg_onlybottomshadow"
        android:paddingLeft="10dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rangs Traders BD"
            android:textSize="18dp"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/appHeader"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/inventoryBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_user_headerbar_textview"
                android:padding="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/inventorytext1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inventory"
                    android:textSize="23dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/totalproducts1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/inventorytext1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/bg_user_headerbar_textview"
                    android:layout_marginTop="15dp"
                    android:padding="15dp"
                    android:text="Total products\n500"
                    android:lineSpacingMultiplier="1.3"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/inventorytext1"
                    app:layout_constraintLeft_toRightOf="@id/totalproducts1"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_user_headerbar_textview"
                    android:layout_marginTop="15dp"
                    android:padding="15dp"
                    android:text="Out of stock\n0"
                    android:lineSpacingMultiplier="1.3"
                    android:textSize="20dp"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/orderBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_user_headerbar_textview"
                android:padding="20dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/inventorytext2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orders and Payments"
                    android:textSize="23dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/totalproducts2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/inventorytext2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/bg_user_headerbar_textview"
                    android:layout_marginTop="15dp"
                    android:padding="15dp"
                    android:text="Orders today\n10"
                    android:lineSpacingMultiplier="1.3"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/inventorytext2"
                    app:layout_constraintLeft_toRightOf="@id/totalproducts2"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_user_headerbar_textview"
                    android:layout_marginTop="15dp"
                    android:padding="15dp"
                    android:text="Total sell\n৳15,000"
                    android:lineSpacingMultiplier="1.3"
                    android:textSize="20dp"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>