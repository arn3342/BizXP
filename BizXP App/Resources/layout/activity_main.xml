<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/globalBackground">
        <LinearLayout
            android:id="@+id/appHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:background="@drawable/bg_onlybottomshadow">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distributor Name"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/quickactionBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/appHeader"
            android:background="#fff"
            android:layout_margin="10dp"
            android:padding="15dp">
            <TextView
                android:id="@+id/quickActionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quick actions"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="14dp"
                android:textColor="#878787"
                android:paddingBottom="10dp"/>
            <Button
                android:id="@+id/addProductBtn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background ="@drawable/selector_bg_user_headerbar_textview_blue"
                android:text="Add product"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/quickActionTitle"/>
            <Button
                android:id="@+id/sellProductBtn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background ="@drawable/selector_bg_user_headerbar_textview_blue"
                android:text="Sell product"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@id/addProductBtn"
                app:layout_constraintTop_toBottomOf="@id/quickActionTitle"/>
            <Button
                android:id="@+id/reportBtn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background ="@drawable/selector_bg_user_headerbar_textview_blue"
                android:text="Reports"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@id/sellProductBtn"
                app:layout_constraintTop_toBottomOf="@id/quickActionTitle"/>
            <Button
                android:id="@+id/stockBtn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background ="@drawable/selector_bg_user_headerbar_textview_blue"
                android:text="Inventory"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addProductBtn"/>
            <Button
                android:id="@+id/paymentBtn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background ="@drawable/selector_bg_user_headerbar_textview_blue"
                android:text="Payments"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toRightOf="@id/stockBtn"
                app:layout_constraintTop_toBottomOf="@id/addProductBtn"/>
            <Button
                android:id="@+id/ordersBtn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background ="@drawable/selector_bg_user_headerbar_textview_blue"
                android:text="Orders"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@id/paymentBtn"
                app:layout_constraintTop_toBottomOf="@id/addProductBtn"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/quickactionBox"
            android:background="#fff"
            android:layout_margin="10dp"
            android:padding="15dp">
            <TextView
                android:id="@+id/todayText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today's report"
                android:textSize="20dp"
                android:fontFamily="sans-serif-light"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00/00/20"
                android:textSize="18dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/todayText"
                app:layout_constraintBottom_toBottomOf="@id/todayText"/>
            <TextView
                android:id="@+id/totalCaptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/todayText"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:lineSpacingMultiplier="1.5"
                android:text="Total products sold : \nTotal buying price : \nTotal selling price : \nTotal received amount : \nTotal due amount : "
                />
            <TextView
                android:id="@+id/numbersText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/todayText"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:lineSpacingMultiplier="1.5"
                android:gravity="right"
                android:text="0\n0\n0\n0\n0"
                />
            <View
                android:id="@+id/totalDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/totalCaptions"
                android:layout_marginTop="10dp"
                android:background="#0084ff"/>
            <TextView
                android:id="@+id/expectedprofitTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/totalDivider"
                android:layout_marginTop="10dp"
                android:text="Expected Profit"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/expectedProfit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/expectedprofitTitle"
                app:layout_constraintBottom_toBottomOf="@id/expectedprofitTitle"
                android:text="0"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/totalprofitTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/expectedprofitTitle"
                android:layout_marginTop="10dp"
                android:text="Total Profit"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/totalprofit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/totalprofitTitle"
                app:layout_constraintBottom_toBottomOf="@id/totalprofitTitle"
                app:layout_constraintRight_toRightOf="parent"
                android:text="0"
                android:textSize="18dp"/>
            <Button
                android:id="@+id/fullreportBtn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background ="@drawable/selector_bg_user_headerbar_textview_blue"
                android:text="See full report"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/totalprofitTitle"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>