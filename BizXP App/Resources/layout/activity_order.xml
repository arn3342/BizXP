
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginTop="2dp"
    android:background="#e4e4e4">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/header"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp"
        android:background="#fff">
        <LinearLayout
            android:id="@+id/dateContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">
            <Button
                android:background="@drawable/selector_bg_user_headerbar_textview"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:layout_margin="10dp"
                android:hint="Start date"
                android:textSize="18dp"/>
            <Button
                android:background="@drawable/selector_bg_user_headerbar_textview"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                android:hint="End date"
                android:textSize="18dp"/>
        </LinearLayout>
        <TextView
                android:id="@+id/totalOrderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total orders"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/dateContainer"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="500"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/totalOrderTitle"
                app:layout_constraintTop_toBottomOf="@id/totalOrderTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/totalDueTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total due"
                android:textSize="18dp"
                app:layout_constraintTop_toTopOf="@id/totalOrderTitle"
                app:layout_constraintLeft_toRightOf="@id/totalOrderTitle"
                android:layout_marginLeft="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="500"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/totalDueTitle"
                app:layout_constraintTop_toBottomOf="@id/totalDueTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/totalProfitTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total profit"
                android:textSize="18dp"
                app:layout_constraintTop_toTopOf="@id/totalOrderTitle"
                app:layout_constraintLeft_toRightOf="@id/totalDueTitle"
                android:layout_marginLeft="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="500"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/totalProfitTitle"
                app:layout_constraintTop_toBottomOf="@id/totalProfitTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/dataHeader"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/header"
            android:padding="15dp"
            android:layout_marginTop="2dp"
            android:background="#fff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Buyer name"
                android:textSize="18dp"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Quantity"
                android:textSize="18dp"
                app:layout_constraintRight_toRightOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/dataHeader"
            app:layout_constraintBottom_toBottomOf="parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/productContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e4e4e4"/>
        </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        
        android:layout_margin="10dp"/>
</android.support.constraint.ConstraintLayout>